<plugin plugin="efcSimple" group="other" version="${qcadoo.plugin.version}"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/plugin"
	xmlns:model="http://schema.qcadoo.org/modules/model" xmlns:view="http://schema.qcadoo.org/modules/view"
	xmlns:menu="http://schema.qcadoo.org/modules/menu" xmlns:localization="http://schema.qcadoo.org/modules/localization"
	xsi:schemaLocation="
		http://schema.qcadoo.org/plugin 
		http://schema.qcadoo.org/plugin.xsd 
		http://schema.qcadoo.org/modules/model 
		http://schema.qcadoo.org/modules/model.xsd 
		http://schema.qcadoo.org/modules/view 
		http://schema.qcadoo.org/modules/view.xsd 
		http://schema.qcadoo.org/modules/localization 
		http://schema.qcadoo.org/modules/localization.xsd 
		http://schema.qcadoo.org/modules/menu 
		http://schema.qcadoo.org/modules/menu.xsd">

	<information>
		<name>MES - Integration - Enova</name>
		<vendor>
			<name>Qcadoo Limited</name>
			<url>http://www.qcadoo.com/</url>
		</vendor>
		<description>Import files from eNova.</description>
		<license>Commercial</license>
	</information>

	<dependencies>
		<dependency>
			<plugin>cfcSimple</plugin>
			<version>[0.4.0</version>
		</dependency>
	</dependencies>

	<modules>
		<localization:translation path="locales" />

		<model:model model="enovaImportedOrder" resource="model/enovaImportedOrder.xml" />
		<model:model model="enovaImportedProduct" resource="model/enovaImportedProduct.xml" />
		<model:model model="enovaImportedOrderProduct" resource="model/enovaImportedOrderProduct.xml" />

		<view:view resource="view/enovaIntegration.xml" />
		<view:view resource="view/enovaOrderDetails.xml" />
		<view:view resource="view/enovaProductDetails.xml" />

		<menu:menu-item name="enovaOrders" category="orders"
			view="enovaIntegration" />
	</modules>

</plugin>